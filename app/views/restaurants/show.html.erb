<h1>Details on <%= @restaurant.name %></h1>
<h3><%= "⭐ " * @restaurant.rating %></h3>
<h4>Address: <%= @restaurant.address %></h4>

<%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %> |
<%= link_to "Delete restaurant", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> |
<%= link_to "Discover chef", chef_restaurant_path(@restaurant) %> |
<br>

<h3 class="mt-4">Reviews</h3>
<% @reviews.each do |review| %>
    <p><%= review.content %></p>
    <%= link_to "x", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>

<h4>Leave a review</h4>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.submit %>
<% end %>


<%= link_to "To home", restaurants_path %>
